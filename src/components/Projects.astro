---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Css from "./icons/Css.astro"
import Bootstrap from "./icons/Bootstrap.astro"
import Html from "./icons/Html.astro"
import Python from "./icons/Python.astro"
import Django from "./icons/Django.astro"
import Laravel from "./icons/Laravel.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-zinc-800 text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-blue-900 text-white",
    icon: Tailwind,
  },
  HTML: {
    name: "HTML",
    class: "text-white  bg-zinc-800",
    icon: Html,
  },
  CSS: {
    name: "CSS",
    class: "bg-zinc-800 text-white",
    icon: Css,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-zinc-800 text-white",
    icon: Bootstrap,
  },
  PYTHON: {
    name: "Python",
    class: "bg-zinc-800 text-white ",
    icon: Python,
  },
  DJANGO: {
    name: "Django",
    class: "bg-zinc-800 text-white ",
    icon: Django,
  },
  LARAVEL:{
    name: "Laravel",
    class: "bg-zinc-800 text-white ",
    icon: Laravel,
  },
}
const PROJECTS = [
  {
    title: "BarberForMens - Aplicación Web de práctica para llevar gestión de una barbería ",
    description:
    "Este proyecto fue desarrollado mediante el uso del framework Django y el lenguaje de programación Python. Para mejorar la experiencia del usuario, se aplicaron estilos estéticos y funcionales utilizando Bootstrap, asegurando así un diseño moderno y adaptativo.",
    link: "#",
    github: "#",
    image: "/projects/svgl.webp",
    tags: [TAGS.DJANGO, TAGS.PYTHON, TAGS.BOOTSTRAP],
  },
   {
    title: "KanbanBard + Drag and Drop - Aplicación Web ",
    description:
      "Este proyecto fue desarrollado mediante el uso del framework Laravel y usando una base de datos MYSQL en el que se realizó un KanbanBoard usando el concepto del Drag and Drop  se aplicaron todos los metodos del CRUD en el proyecto y se usaron estilos usando Tailwind de una manera estética y funcional",
    link: "#",
    github: "#",
    image: "/projects/todo.webp",
    tags: [TAGS.LARAVEL, TAGS.TAILWIND],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



